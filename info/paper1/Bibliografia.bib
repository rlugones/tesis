	number = {10},
	urldate = {2016-07-22},
	journal = {Phys. Rev. Lett.},
	author = {Meyrand, R. and Galtier, S. and Kiyani, K. H.},
	month = mar,
	year = {2016},
	pages = {105002},
	file = {APS Snapshot:/home/rodrigo/.mozilla/firefox/d3yzv2sc.default-1445011580632/zotero/storage/36Z2Z3SG/PhysRevLett.116.html:text/html;Full Text PDF:/home/rodrigo/.mozilla/firefox/d3yzv2sc.default-1445011580632/zotero/storage/BZS3FNA6/Meyrand et al. - 2016 - Direct Evidence of the Transition from Weak to Str.pdf:application/pdf}
